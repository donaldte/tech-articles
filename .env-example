# .env-example for tech-articles
# Copy this file to .env and fill real values (do NOT commit .env with secrets).
# Lines starting with # are comments. Values follow KEY=VALUE format.

# -----------------------------
# Django general
# -----------------------------
# True/False (used by decouple cast=bool)
DJANGO_DEBUG=True
# Django secret key (generate a secure random value for production)
DJANGO_SECRET_KEY=changeme_generate_a_secure_key
# Comma-separated hosts used in production (e.g. example.com,www.example.com)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
# If you run locally inside Docker, set USE_DOCKER=yes
USE_DOCKER=no
# Optional: show/hide admin AllAuth enforcement in admin
DJANGO_ADMIN_FORCE_ALLAUTH=False
# Allow registration via allauth
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# -----------------------------
# Database (PostgreSQL example)
# -----------------------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=tech_articles_db
DB_USER=tech_articles_user
DB_PASSWORD=secretpassword
DB_HOST=localhost
DB_PORT=5432
# Alternatively you may set a single DATABASE_URL (compose files sometimes use it)
# DATABASE_URL=postgres://user:pass@host:5432/dbname

# Connection pool / keep-alive used in production
CONN_MAX_AGE=60

# -----------------------------
# Redis / Celery
# -----------------------------
# Example redis URL; change host/port/db as needed
REDIS_URL=redis://localhost:6379/0
# If using TLS redis: rediss://...

# -----------------------------
# Email
# -----------------------------
# For local development the console backend is often used.
DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DJANGO_DEFAULT_FROM_EMAIL=tech-articles <noreply@example.com>
DJANGO_SERVER_EMAIL=${DJANGO_DEFAULT_FROM_EMAIL}
DJANGO_EMAIL_SUBJECT_PREFIX=[tech-articles]

# For production, when using anymail/SES or SMTP set appropriate backend and creds
# Example for SMTP (uncomment and set values):
# DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=smtp-user
# EMAIL_HOST_PASSWORD=smtp-password
# EMAIL_USE_TLS=True

# -----------------------------
# AWS S3 (optional - used in production for media/static)
# -----------------------------
DJANGO_AWS_ACCESS_KEY_ID=
DJANGO_AWS_SECRET_ACCESS_KEY=
DJANGO_AWS_STORAGE_BUCKET_NAME=
DJANGO_AWS_S3_MAX_MEMORY_SIZE=100000000
DJANGO_AWS_S3_REGION_NAME=
DJANGO_AWS_S3_CUSTOM_DOMAIN=

# -----------------------------
# Security / Production flags
# -----------------------------
DJANGO_SECURE_SSL_REDIRECT=True
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True

# Admin URL (production override)
DJANGO_ADMIN_URL=admin/
